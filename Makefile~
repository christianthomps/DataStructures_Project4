FLAGS = -Wall -O0 -g -std=c++14 -pedantic-errors

all: BankSimulation

BankSimulation: BankSimulation.o QueType.o Customer.o PriorityQue.o
	g++ $(FLAGS) BankSimulation.o QueType.o Customer.o PriorityQue.o -o BankSimulation

QueType.o: QueType.cpp QueType.h
	g++ $(FLAGS) -c QueType.cpp

Customer.o: Customer.cpp Customer.h
	g++ $(FLAGS) -c Customer.cpp

PriorityQue.o: PriorityQue.cpp PriorityQue.h
	g++ $(FLAGS) -c PriorityQue.cpp

BankSimulation.o: BankSimulation.cpp
	g++ $(FLAGS) -c BankSimulation.cpp

run: BankSimulation
	./BankSimulation

clean:
	rm -f QueType.o
	rm -f Customer.o
	rm -f PriorityQue.o
	rm -f BankSimulation BankSimulation.o